<tr>
  <td>
    <p class="fw-normal mt-2">
      <%= order.user_name %>
    </p>
  </td>
  <td>
    <p class="fw-normal mt-2">
      <%= order.phone %>
    </p>
  </td>
  <td>
    <p class="fw-normal mt-2">
      <%= order.address_name %>
    </p>
  </td>
  <td>
    <p class="fw-normal mt-2">
      <%= order.total %>
    </p>
  </td>
  <td>
    <p class="fw-normal mt-2 font-weight-bold <%= display_color_status order.status %>">
      <%= order.status_i18n %>
    </p>
  </td>
  <td class="text-center pt-3">
    <button type="button" class="btn text-primary btn-sm btn-rounded">
      <i class="fa-solid fa-eye"></i>
    </button>
    <button type="button" class="btn text-warning btn-sm btn-rounded">
      <i class="fas fa-edit"></i>
    </button>
    <button type="button" class="btn text-danger btn-sm btn-rounded">
      <i class="fa-solid fa-trash-can"></i>
    </button>
  </td>
</tr>

