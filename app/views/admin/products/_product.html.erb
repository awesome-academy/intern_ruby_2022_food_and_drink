<tr>
  <td>
    <div class="d-flex align-items-center">
      <%= image_tag product.product_images.first.image_url, class: "product_image" %>
      <div class="ms-3">
        <p class="fw-bold mb-1">
          <%= product.name %>
        </p>
      </div>
    </div>
  </td>
  <td>
    <p class="fw-normal mt-2">
      <%= product.category_name %>
    </p>
  </td>
  <td>
    <p class="fw-normal mt-2">
      <%= product.sum_quantity %>
    </p>
  </td>
  <td class="text-center pt-3">
    <button type="button" class="btn text-primary btn-sm btn-rounded">
      <i class="fa-solid fa-eye"></i>
    </button>
    <button type="button" class="btn text-warning btn-sm btn-rounded">
      <i class="fas fa-edit"></i>
    </button>
    <button type="button" class="btn text-danger btn-sm btn-rounded">
      <i class="fa-solid fa-trash-can"></i>
    </button>
  </td>
</tr>
