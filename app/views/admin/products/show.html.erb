<section class="content">
  <div class="card card-solid">
    <div class="card-body">
      <div class="row">
        <div class="col-12 col-sm-6">
          <div class="col-12">
            <%= image_tag display_image(@product), class: "product_image_thumb" %>
          </div>
          <div class="col-12 product-image-thumbs">
            <% @product.product_images.each do |p| %>
              <div class="product-image-thumb">
                <%= image_tag p.image_url %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="col-12 col-sm-6">
          <h3 class="my-3"><%= @product.name %></h3>
          <hr>
          <h4 class="mt-3"></h4>
          <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <table class="table align-middle mb-0 bg-white table-product">
              <thead class="bg-light">
                <tr>
                  <th><%= t ".size" %></th>
                  <th><%= t ".quantity" %></th>
                  <th><%= t ".price" %></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @product.product_attributes.each do |product| %>
                  <tr>
                    <td>
                      <p class="fw-normal mt-2">
                        <%= product.size_name %>
                      </p>
                    </td>
                    <td>
                      <p class="fw-normal mt-2">
                        <%= product.quantity %>
                      </p>
                    </td>
                    <td>
                      <p class="fw-normal mt-2">
                        <%= number_to_currency(product.price, unit: "vnÄ‘", separator: ",",format: "%n %u") %>
                      </p>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="row mt-4">
        <nav class="w-100">
          <div class="nav nav-tabs" id="product-tab" role="tablist">
            <a class="nav-item nav-link active" id="product-desc-tab" data-toggle="tab" href="#product-desc" role="tab" aria-controls="product-desc" aria-selected="true">Description</a>
          </div>
        </nav>
        <div class="tab-content p-3" id="nav-tabContent">
          <div class=""> 
            <%= @product.description %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
